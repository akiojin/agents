{
  "name": "@akiojin/agents",
  "version": "0.1.0",
  "description": "オープンソースで完全無料の自律型コーディングエージェント",
  "keywords": [
    "ai",
    "agent",
    "llm",
    "mcp",
    "cli",
    "coding-assistant",
    "bun"
  ],
  "homepage": "https://github.com/akiojin/agents#readme",
  "bugs": {
    "url": "https://github.com/akiojin/agents/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akiojin/agents.git"
  },
  "license": "MIT",
  "author": "akiojin",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "agents": "./dist/cli.js",
    "@akiojin/agents": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --minify",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "bun run build && bun run build:types",
    "start": "bun run dist/cli.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/core tests/providers tests/utils tests/mcp tests/cli.test.ts",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/integration/e2e.test.ts",
    "test:parallel": "bun test tests/integration/parallel-integration.test.ts",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:bash": "bun run start -- task 'bashの実装はどのようになっていますか？'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build:all"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "eventsource": "^4.0.0",
    "inquirer": "^9.2.15",
    "jsonrpc-lite": "^2.2.0",
    "openai": "^4.47.0",
    "ora": "^8.0.1",
    "p-limit": "^5.0.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
