{
  "llm": {
    "provider": "local-lmstudio",
    "authType": "openai-compatible",
    "model": "qwen/qwen3-coder-30b",
    "timeout": 120000,
    "maxRetries": 3,
    "temperature": 0.7,
    "maxTokens": 2000
  },
  "localEndpoint": "http://host.docker.internal:1234",
  "indexing": {
    "excludeDirectories": [
      "bundle",
      "coverage",
      "tmp",
      ".vscode",
      ".idea"
    ],
    "excludePatterns": [
      "*.min.js",
      "*.bundle.js",
      "*-lock.json"
    ]
  },
  "debugMode": true,
  "mcpServers": {
    "microsoft.docs.mcp": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "context7": {
      "type": "sse",
      "url": "https://mcp.context7.com/sse"
    },
    "google-search": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-google-search"],
      "env": {}
    },
    "markitdown": {
      "type": "stdio",
      "command": "uvx",
      "args": ["markitdown-mcp"]
    },
    "textlint": {
      "type": "stdio",
      "command": "npx",
      "args": ["textlint", "--mcp"],
      "env": {}
    }
  }
}