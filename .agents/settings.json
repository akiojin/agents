{
  "llm": {
    "provider": "local-lmstudio",
    "model": "qwen/qwen3-coder-30b",
    "timeout": 120000,
    "maxRetries": 3,
    "temperature": 0.7,
    "maxTokens": 2000,
    "responseFormat": {
      "enabled": true,
      "maxLineLength": 80,
      "useSimpleLists": true,
      "avoidTables": true,
      "minimizeEmojis": true
    }
  },
  "mcp": {
    "enabled": true,
    "timeout": 120000,
    "maxRetries": 3
  },
  "mcpServers": {
    "microsoft.docs.mcp": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "context7": {
      "type": "sse",
      "url": "https://mcp.context7.com/sse"
    },
    "google-search": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-google-search"],
      "env": {}
    },
    "markitdown": {
      "type": "stdio",
      "command": "uvx",
      "args": ["markitdown-mcp"]
    },
    "textlint": {
      "type": "stdio",
      "command": "npx",
      "args": ["textlint", "--mcp"],
      "env": {}
    }
  },
  "app": {
    "maxParallel": 5,
    "timeout": 300000,
    "logLevel": "debug"
  },
  "paths": {
    "cache": "./.agents/cache",
    "history": "./.agents/history",
    "logs": "./.agents/logs"
  },
  "localEndpoint": "http://host.docker.internal:1234",
  "modelContextLimits": {
    "qwen/qwen3-coder-30b": 262144,
    "openai/gpt-oss-20b": 32768,
    "comment": "Manual override for models that don't report context_length via API"
  }
}